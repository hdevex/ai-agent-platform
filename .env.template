# AI Agent Platform - Environment Configuration Template
# Copy to .env and configure for your environment

# =============================================================================
# PLATFORM CORE CONFIGURATION
# =============================================================================

# Platform Identity
PLATFORM_NAME="AI Agent Platform"
PLATFORM_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production

# API Configuration
API_HOST="0.0.0.0"
API_PORT="8000"
API_PREFIX="/api/v1"
DEBUG_MODE="true"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Primary Database)
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_DB="ai_agent_platform"
POSTGRES_USER="agent_platform"
POSTGRES_PASSWORD="secure_password_here"
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# Redis (Cache & Session Store)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"
REDIS_PASSWORD=""
REDIS_URL="redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}"

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================

# Vector Database Selection (chroma, pinecone, qdrant, weaviate)
VECTOR_DB_TYPE="chroma"

# Chroma Configuration
CHROMA_HOST="localhost"
CHROMA_PORT="8001"
CHROMA_URL="http://${CHROMA_HOST}:${CHROMA_PORT}"

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=""
PINECONE_ENVIRONMENT=""

# =============================================================================
# AI/ML MODEL CONFIGURATION
# =============================================================================

# Primary LLM Configuration
LLM_PROVIDER="lm_studio"  # lm_studio, openai, anthropic, ollama
LLM_BASE_URL="http://192.168.101.70:1234/v1"
LLM_MODEL_NAME="openai/gpt-oss-20b"
LLM_TEMPERATURE="0.1"
LLM_MAX_TOKENS="4000"

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4"

# Embedding Model Configuration
EMBEDDING_PROVIDER="local"  # local, openai, huggingface
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# File Storage
STORAGE_TYPE="local"  # local, s3, azure_blob
STORAGE_PATH="./data/storage"

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY="your-super-secret-jwt-key-here"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS="24"

# API Authentication
API_KEY_ENABLED="false"
API_KEY=""

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
CORS_ALLOW_CREDENTIALS="true"

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json, text
LOG_FILE="./logs/platform.log"

# Monitoring
METRICS_ENABLED="true"
HEALTH_CHECK_INTERVAL="30"

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Factory Configuration
MAX_CONCURRENT_AGENTS="10"
AGENT_TIMEOUT_SECONDS="300"
AGENT_MEMORY_LIMIT_MB="512"

# Agent Storage
AGENT_STORAGE_PATH="./data/agents"
AGENT_BACKUP_ENABLED="true"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
ENABLE_API_DOCS="true"
ENABLE_ADMIN_INTERFACE="true"
AUTO_RELOAD="true"

# Testing Configuration
TEST_DATABASE_URL="postgresql://test_user:test_pass@localhost:5433/test_ai_agent_platform"
TEST_REDIS_URL="redis://localhost:6380/1"

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection Pools
DB_POOL_SIZE="10"
DB_MAX_OVERFLOW="20"
REDIS_POOL_SIZE="10"

# Request Limits
MAX_REQUEST_SIZE_MB="100"
REQUEST_TIMEOUT_SECONDS="60"

# Cache Configuration
CACHE_TTL_SECONDS="3600"
CACHE_MAX_SIZE_MB="256"